@{
    ViewData["Title"] = "Quản lý dữ liệu";
}
<br />

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>QUẢN LÝ ĐIỂM TRUY CẬP</title>
    @* <link rel="stylesheet" href="styles.css"> *@
    <link rel="stylesheet" type="text/css" href="~/css/styles_options.css" />
    <base href="/">
    <style>

        button {
            cursor: pointer;
            transition: background-color 0.3s ease, color 0.3s ease, transform 0.3s ease;
            border: none;
            border-radius: 10px;
        }

            button:hover {
                background-color: #008CBA;
                color: white;
                transform: scale(1.1);
            }

        h1 {
            font-size: 27px;
            font-family: Arial;
            color: black;
        }
        
        #editTable {
            display: none;
        }</style>
</head>
<body>
    <h1>QUẢN LÝ ĐIỂM TRUY CẬP</h1>
    <form id="addDataFormHSP">
        <label for="InputIDScence"> Tên hình ảnh</label>
        <input type="text" id="InputIDScence" required><br />

        <label for="InputIDNextScence">Hình ảnh được truy cập</label>
        <input type="text" id="InputIDNextScence" required><br />

        <label for="InputText">Thông tin Điểm truy cập</label>
        <input type="text" id="InputText" required><br />

        <label for="pitchInput">Chiều dọc (Pitch)</label>
        <input type="number" step="0.1" id="pitchInput" required><br />

        <label for="yawInput">Chiều ngang (Yaw)</label>
        <input type="number" step="0.1" id="yawInput" required><br />

        <button type="submit" style="justify-content: center;">THÊM ĐIỂM TRUY CẬP</button> <br />
        <br />
    </form>
    <script src="~/js/ADD_HSP.js"></script>

    <h1>Danh sách Điểm truy cập</h1>
    <table id="HotSpotTable" style="font-size:15px">
        <thead>
            <tr>
                <th>ID Điểm truy cập</th>
                <th>Tên hình ảnh </th>
                <th>Hình ảnh được truy cập</th>
                <th>Thông tin Điểm truy cập</th>
                <th>Chiều dọc (Pitch)</th>
                <th>Chiều ngang (Yaw)</th>
                <th>Lựa chọn</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
    <div id="editTable">    
        <input type="text" id="editIdHsp" placeholder="ID Điểm truy cập">
        <input type="text" id="editNameScene" placeholder="Tên hình ảnh">
        <input type="text" id="editNameNextScene" placeholder="Hình ảnh được truy cập">
        <input type="text" id="editText" placeholder="Thông tin Điểm truy cập">
        <input type="number" id="editPitch" placeholder="Chiều dọc (Pitch)">
        <input type="number" id="editYaw" placeholder="Chiều ngang (Yaw)">
        <button id="saveChangesBtn">Lưu thay đổi </button>
    </div>
    <script src="~/js/ManageHotSpot.js"></script>
</body>
</html>

